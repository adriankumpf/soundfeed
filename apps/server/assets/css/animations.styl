@keyframes slideIn {
  from {
    transform: translate3d(10000px, 0, 0);
    visibility: visible;
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}

@keyframes slideOut {
  from {
    transform: translate3d(0, 0, 0);
  }

  to {
    transform: translate3d(10000px, 0, 0);
    visibility: visible;
  }
}

.animate {
  animation-fill-mode: both;
  animation-duration: 0.95s;
}

.slideIn {
  @extend .animate;
  animation-name: slideIn;
}

.slideOut {
  @extend .animate;
  animation-name: slideOut;
}
