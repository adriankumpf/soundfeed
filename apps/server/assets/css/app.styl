body {
  font-family: 'Lato', sans-serif;
  color: #f50;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3.5vh 0;
}


input:focus,
select:focus {
  outline: none;
}

.header {
  font-size: 4.5vmin;
  text-transform: uppercase;
  letter-spacing: 5px;
  margin-bottom: 15.5vh;
}

form {
  padding: 15px;
  width: 40vmax;

  .input {
    display: flex;
    item-align: stretch;

    .select-wrapper {
      position: relative;
      min-width: 105px;

      select {
        cursor: pointer;
        appearance: none;
        padding: 0 10px;
        height: 48px;
        width: 100%;
        background: #f50;
        border: 1px solid #f50;
        border-left: none;
        border-radius: 0 5px 5px 0;
        font-size: 16px;
        color: white;

        &:hover {
          background: lighten(#f50, 10%);
        }
      }

      &:after {
        pointer-events: none;
        position: absolute;
        display: block;
        content: '';
        width: 10px;
        height: 10px;
        top: 50%;
        right: 15px;
        margin-top: -3px;
        border-bottom: 1px solid #fff;
        border-right: 1px solid #fff;
        transform: rotate(45deg) translateY(-50%);
        transform-origin: 50% 0%;
      }
    }

    .username {
      min-width: 0;
      width: 100%;
      height: 44px;
      border: 1px solid #ccc;
      border-right: none;
      font-family: inherit;
      font-size: 14px;
      font-weight: 300;
      padding: 1px 10px;
      color: #333;
      letter-spacing: 1px;
      border-radius: 5px 0 0 5px;
      transition: background .3s ease-in-out;

      &:focus {
        border: 1px solid #f50;
      }
    }
  }

  .submit {
    width: 100%;
    height: 48px;
    background: #f50;
    font-size: 13px;
    font-weight: 700;
    color: white;
    text-transform: uppercase;
    margin-top: 10px;
    border: none;
    border-radius:  5px;
    cursor: pointer;
    transition: background .3s ease-in-out;

    &:hover {
      background: lighten(#f50, 10%);
    }
  }


  .description {
    font-size: 12px;
    letter-spacing: 1px;
    color: #737373;
    line-height: 1.3em;
    margin-top: 15px;
  }
}



