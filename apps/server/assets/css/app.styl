body {
  font-family: 'Lato', sans-serif;
  color: #f50;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3.5vh 0;
}

.header {
  font-size: 4.5vmin;
  text-transform: uppercase;
  letter-spacing: 5px;
  margin-bottom: 15.5vh;
}

form {
  padding: 15px;
  width: 40vmax;

  .input {
    display: flex;

    .username {
      height: 44px;
      border: 1px solid #ccc;
      border-right: none;
      width: 65%;
      font-family: inherit;
      font-size: 14px;
      font-weight: 300;
      padding: 1px 10px;
      color: #333;
      letter-spacing: 1px;
      border-radius: 5px 0 0 5px;
      transition: background .3s ease-in-out;

      &:focus {
        border: 1px solid #f50;
      }
    }

    .submit {
      width: 35%;
      height: 48px;
      background: #f50;
      font-size: 13px;
      font-weight: 700;
      color: white;
      text-transform: uppercase;
      border: none;
      border-radius: 0 5px 5px 0;
      cursor: pointer;
      transition: background .3s ease-in-out;

      &:hover {
        background: lighten(#f50, 15%);
      }
    }

    input:focus {
      outline: none;
    }
  }

  .description {
    font-size: 12px;
    letter-spacing: 1px;
    color: #737373;
    line-height: 1.3em;
    margin-top: 15px;
  }
}



