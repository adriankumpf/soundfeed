@import '../variables';

.generator {
  padding: 15px;
  width: $maxWidth;

  .input {
    display: flex;

    &-type {
      position: relative;
      min-width: 105px;

      &-select {
        cursor: pointer;
        appearance: none;
        padding: 0 10px;
        height: 48px;
        width: 100%;
        background: $orange;
        border: 1px solid $orange;
        border-left: none;
        border-radius: 0 5px 5px 0;
        font-size: 16px;
        color: white;

        &:hover {
          background: lighten($orange, 10%);
          border-color: lighten($orange, 10%);
        }
      }

      &:after {
        pointer-events: none;
        position: absolute;
        display: block;
        content: '';
        width: 10px;
        height: 10px;
        top: 50%;
        right: 15px;
        margin-top: -3px;
        border-bottom: 1px solid $white;
        border-right: 1px solid $white;
        transform: rotate(45deg) translateY(-50%);
        transform-origin: 50% 0%;
      }
    }

   &-username {
      min-width: 0;
      width: 100%;
      height: 44px;
      border: 1px solid $orange;
      border-right: none;
      background: transparent;
      background-clip: padding-box;
      font-family: inherit;
      font-size: 14px;
      font-weight: 300;
      padding: 1px 10px;
      color: $lightgrey;
      letter-spacing: 1px;
      border-radius: 5px 0 0 5px;
      transition: background .3s ease-in-out;
    }
  }

  .description {
    font-size: 12px;
    letter-spacing: 1px;
    color: $darkgrey;
    line-height: 1.3em;
    margin-top: 15px;
  }
}
