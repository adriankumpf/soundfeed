.generator {
  position: relative;
  width: $maxWidth;
  max-width: 300px;

  .username,
  .type {
    display: block;
    appearance: none;
    border: 1px solid rgba(255, 255, 255, 0.4);
    background-color: rgba(255, 255, 255, 0.2);
    width: 100%;
    border-radius: 3px;
    padding: 10px 0;
    margin: 0 auto 10px auto;
    text-align: center;
    font-size: 18px;
    color: white;
    transition-duration: 0.25s;
    font-weight: 300;
    outline: 0;

    &:hover {
      background-color: rgba(255, 255, 255, 0.4);
    }
  }

  .type {
    position: relative;
    height: 23px;

    &-select {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      appearance: none;
      cursor: pointer;
      border: none;
      text-indent: 40%; // todo
      width: 100%;
      background: transparent;
      font-size: 18px;
      font-weight: 300;
      color: white;
    }

    &:after {
      pointer-events: none;
      position: absolute;
      display: block;
      content: '';
      width: 10px;
      height: 10px;
      top: 50%;
      right: 15px;
      margin-top: -3px;
      border-bottom: 1px solid $white;
      border-right: 1px solid $white;
      transform: rotate(45deg) translateY(-50%);
      transform-origin: 50% 0%;
    }
  }

  .submit {
    appearance: none;
    outline: 0;
    background-color: white;
    border: 0;
    padding: 10px 0;
    margin: 0 auto 0 auto;
    color: $blue2;
    border-radius: 3px;
    width: 100%;
    cursor: pointer;
    font-size: 18px;
    transition-duration: 0.25s;

    &:hover {
      background-color: rgb(245, 247, 249);
    }
  }
}

